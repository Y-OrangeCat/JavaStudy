<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.yang.dao.UserMapper">
    <!--一般查询-->
    <select id="getUserList" resultType="user02">
        <!--select查询语句-->
        select * from mybatis.user
    </select>

    <!--根据id查询  resultType返回值类型；parameterType参数类型-->
    <select id="getUserId" parameterType="int" resultType="com.yang.pojo.User">
        select *
        from mybatis.user
        where id = #{id}
    </select>

    <!--    添加元素-->
    <insert id="addUser" parameterType="com.yang.pojo.User">
        insert into mybatis.user(id, name, pwd)
        values (#{id}, #{name}, #{pwd});
    </insert>

    <!--    修改数据-->
    <update id="updateUser" parameterType="com.yang.pojo.User">
        update mybatis.user
        set name =#{name},
            pwd=#{pwd}
        where id = #{id}
    </update>

    <!--    删除数据-->
    <delete id="deleteUser" parameterType="int">
        delete
        from mybatis.user
        where id = #{id}
    </delete>

</mapper>